<!DOCTYPE html>
<html>
	<head>
		<title>
			{% block title %}Jobeet - Your best job board
			{% endblock %}
		</title>

		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="{{ path('job.list') }}">Jobeet</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="/logout" class="btn btn-default navbar-btn">Logout</a>
                    {% else %}
						<a href="/login" class="btn btn-default navbar-btn">Login</a>
					{% endif %}

				</div>

				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li>
							<div>
								<a href="/job/create" class="btn btn-default navbar-btn">Post a Job</a>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
